# LiteSpeed Cache Control - DISABLE HTML CACHING
<IfModule LiteSpeed>
    CacheLookup off
</IfModule>

# Disable caching for HTML files
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>

# Enable caching for static resources with versioning
<FilesMatch "\.(jpg|jpeg|png|gif|ico|css|js|svg|webp)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Security Headers
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"

# Force HTTPS (if you have SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Clean URLs - Remove .html extension
RewriteEngine On

# Redirect requests with .html extension to the cleaner URL (301 Permanent Redirect)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Internally rewrite requests without extension to the corresponding .html file
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [NC,L]
